    <modelVersion>4.0.0</modelVersion>
    <groupId>mtsa</groupId>
    <artifactId>mtsa</artifactId>
    <version>1.0-SNAPSHOT</version>
    <properties>
        <java.version>1.8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
    </properties>


    <profiles>
        <profile>
            <id>usersRun</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <noLogging>OFF</noLogging> <!--set log ON if you want to see console debug-->
                <fork.number>4</fork.number>
                <thread.count>4</thread.count>
                <env.maxmem></env.maxmem>
            </properties>
        </profile>
        <profile>
            <id>serverBranchConfig</id>
            <activation>
                <property>
                    <name>env</name>
                    <value>server</value>
                </property>
            </activation>
            <properties>
                <env.maxmem>4096m</env.maxmem>
                <fork.number>1</fork.number>
                <thread.count>8</thread.count>
                <noLogging>OFF</noLogging>
            </properties>
        </profile>
    </profiles>


    <build>
        <testSourceDirectory>src/test/java/</testSourceDirectory>
        <finalName>mtsa</finalName>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5</version>
                <configuration>
                    <fork>true</fork>
                    <!--<meminitial>1024m</meminitial>-->
                    <maxmem>${env.maxmem}</maxmem>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>

